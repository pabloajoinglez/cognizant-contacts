<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/girl_user" />

    <TextView
        android:id="@+id/fragmentUserDetailUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/fragmentUserDetailBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="24dp" />

    <Button
        android:id="@+id/fragmentUserDetailButtonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/user_detail_button_delete" />

</LinearLayout>